{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@github-profile-cards/core": ["../../packages/core/src/index.ts"],
      "@github-profile-cards/react-material": ["../../packages/react-material/src/index.tsx"]
    }
  },
  "include": ["src", "vite.config.ts"],
  "references": [
    { "path": "../../packages/core" },
    { "path": "../../packages/react-material" }
  ]
}
