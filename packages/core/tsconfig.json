{
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "module": "ESNext",
    "target": "ES2020",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "noEmit": false // Explicitly ensure emit is on
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "tsup.config.ts"]
}
